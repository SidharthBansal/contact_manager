<% if @person.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <p>The form contains <%= pluralize(@person.errors.count, "error")%></p>

    <% @person.errors.full_messages.each do |error_message| %>
      <ul>
        <li><%= error_message %></li>
      </ul>
    <%end%>
    </div>
  </div>
<%end%>
