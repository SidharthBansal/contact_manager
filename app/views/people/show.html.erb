<% provide(:title, @person.first_name) %>


<h2><%="#{@person.first_name} #{@person.last_name}" %></h2>
<p><%= link_to "Edit Contact", edit_person_path(@person.id)%>
   <%= link_to "Delete Contact", @person, method: :delete,
                                          data: {confirm: "Are you sure?"}%></p>


<div class="col-md-4">
  <p> Phone <%= "number".pluralize(@person.phone_numbers.count) %>:</p>
  <ul>
    <% @person.phone_numbers.each do |phone| %>
      <li><%= "#{phone.number}" %>
        <%= link_to "Edit", edit_phone_number_path(phone.id, person: @person) %>
        <%= link_to "Delete", phone, method: :delete,
                                     data: {confirm: "Are you sure"}%>
      </li>
      <% end %>
  </ul>
  <p><%= link_to "Add phone number", new_phone_number_path(person: @person) %></p>
</div>
<div class="col-md-4">
  <p><%= "Email".pluralize(@person.phone_numbers.count) %>:</p>
  <ul>
    <% @person.emails.each do |email| %>
      <li><%= "#{email.email}" %>
        <%= link_to "Edit", edit_email_path(email.id, person: @person) %>
        <%= link_to "Delete", email, method: :delete,
                                     data: {confirm: "Are you sure"}%>
      </li>
      <% end %>
  </ul>
  <p><%= link_to "Add email", new_email_path(person: @person) %></p>
</div>
<p><%= link_to "<< Back", root_path %></p>
